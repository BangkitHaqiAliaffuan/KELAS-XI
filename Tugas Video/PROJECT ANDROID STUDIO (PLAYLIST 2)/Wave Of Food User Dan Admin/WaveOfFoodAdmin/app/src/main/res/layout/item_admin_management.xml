<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_admin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CardStyle"
    android:layout_marginVertical="@dimen/space_sm"
    app:cardCornerRadius="@dimen/radius_lg"
    app:cardElevation="@dimen/elevation_sm"
    app:rippleColor="@color/primary_green_light"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_lg">

        <!-- Top Row: Profile, Info, Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:baselineAligned="false">

            <!-- Admin Profile -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="2dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_admin_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Admin Profile"
                    android:background="@color/primary_green_light"
                    android:src="@drawable/ic_admin_placeholder"
                    android:tint="@color/white"
                    android:padding="12dp" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Admin Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/space_md"
                android:layout_marginEnd="@dimen/space_sm"
                android:layout_gravity="center_vertical">

                <!-- Admin Name -->
                <TextView
                    android:id="@+id/tv_admin_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="2dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="John Admin Doe" />

                <!-- Admin Email -->
                <TextView
                    android:id="@+id/tv_admin_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="admin@email.com"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="john.admin@waveoffood.com" />

                <!-- Admin Role Badge -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_admin_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/primary_green"
                    app:chipCornerRadius="12dp"
                    app:chipMinHeight="24dp"
                    app:chipStartPadding="8dp"
                    app:chipEndPadding="8dp"
                    app:ensureMinTouchTargetSize="false"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    tools:text="Super Admin" />

            </LinearLayout>

            <!-- Status & Actions -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_vertical">

                <!-- Status Indicator -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <View
                        android:id="@+id/view_status_indicator"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/bg_circle_green"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tv_admin_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/success"
                        tools:text="Active" />

                </LinearLayout>

                <!-- More Options Button -->
                <ImageView
                    android:id="@+id/iv_more_options"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_more"
                    android:tint="@color/text_secondary"
                    android:contentDescription="More Options"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Middle Row: Permissions and Dates -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_md"
            android:orientation="horizontal">

            <!-- Permissions -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Permissions"
                    style="@style/TextCaption"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_permissions"
                    style="@style/TextBody"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"
                    tools:text="Orders, Menu, Analytics" />

            </LinearLayout>

            <!-- Dates -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/tv_created_date"
                    style="@style/TextCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    tools:text="Created: 15 Jan 2024" />

                <TextView
                    android:id="@+id/tv_last_login"
                    style="@style/TextCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    tools:text="Last login: 2 hours ago" />

            </LinearLayout>

        </LinearLayout>

        <!-- Bottom Row: Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_md"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnEditAdmin"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/primary_green"
                android:text="Edit"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:minWidth="72dp"
                android:paddingHorizontal="16dp"
                style="@style/Widget.Material3.Button" />

            <Button
                android:id="@+id/btnDeleteAdmin"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:backgroundTint="@color/error"
                android:text="Delete"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:minWidth="72dp"
                android:paddingHorizontal="16dp"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
