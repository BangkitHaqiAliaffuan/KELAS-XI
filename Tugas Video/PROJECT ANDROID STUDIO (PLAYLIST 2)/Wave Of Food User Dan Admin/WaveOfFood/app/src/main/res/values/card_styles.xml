<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Card Styles for Wave Of Food -->
    
    <!-- Base Card Style -->
    <style name="Card.Base" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/radius_md</item>
        <item name="cardElevation">@dimen/elevation_sm</item>
        <item name="cardBackgroundColor">@color/background_surface</item>
        <item name="contentPadding">@dimen/spacing_md</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="rippleColor">@color/interactive_focused</item>
    </style>
    
    <!-- Food Item Card -->
    <style name="Card.FoodItem" parent="Card.Base">
        <item name="cardCornerRadius">@dimen/radius_lg</item>
        <item name="cardElevation">@dimen/elevation_xs</item>
        <item name="contentPadding">0dp</item>
        <item name="android:layout_marginBottom">@dimen/spacing_sm</item>
    </style>
    
    <!-- Restaurant Card -->
    <style name="Card.Restaurant" parent="Card.Base">
        <item name="cardCornerRadius">@dimen/radius_lg</item>
        <item name="cardElevation">@dimen/elevation_md</item>
        <item name="contentPadding">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/spacing_xs</item>
        <item name="android:layout_marginVertical">@dimen/spacing_sm</item>
    </style>
    
    <!-- Order Summary Card -->
    <style name="Card.OrderSummary" parent="Card.Base">
        <item name="cardCornerRadius">@dimen/radius_lg</item>
        <item name="cardElevation">@dimen/elevation_md</item>
        <item name="cardBackgroundColor">@color/background_secondary</item>
        <item name="contentPadding">@dimen/spacing_lg</item>
    </style>
    
    <!-- Cart Item Card -->
    <style name="Card.CartItem" parent="Card.Base">
        <item name="cardCornerRadius">@dimen/radius_sm</item>
        <item name="cardElevation">@dimen/elevation_xs</item>
        <item name="contentPadding">@dimen/spacing_md</item>
        <item name="android:layout_marginVertical">@dimen/spacing_xs</item>
    </style>
    
    <!-- Category Card -->
    <style name="Card.Category" parent="Card.Base">
        <item name="cardCornerRadius">@dimen/radius_xl</item>
        <item name="cardElevation">@dimen/elevation_sm</item>
        <item name="contentPadding">@dimen/spacing_md</item>
        <item name="android:layout_margin">@dimen/spacing_xs</item>
    </style>
    
    <!-- Promotion Card -->
    <style name="Card.Promotion" parent="Card.Base">
        <item name="cardCornerRadius">@dimen/radius_lg</item>
        <item name="cardElevation">@dimen/elevation_md</item>
        <item name="contentPadding">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/spacing_md</item>
        <item name="android:layout_marginVertical">@dimen/spacing_sm</item>
    </style>
    
    <!-- Order Status Card -->
    <style name="Card.OrderStatus" parent="Card.Base">
        <item name="cardCornerRadius">@dimen/radius_md</item>
        <item name="cardElevation">@dimen/elevation_lg</item>
        <item name="cardBackgroundColor">@color/background_primary</item>
        <item name="contentPadding">@dimen/spacing_lg</item>
        <item name="android:layout_margin">@dimen/spacing_md</item>
    </style>
    
    <!-- Stats Card -->
    <style name="Card.Stats" parent="Card.Base">
        <item name="cardCornerRadius">@dimen/radius_md</item>
        <item name="cardElevation">@dimen/elevation_xs</item>
        <item name="cardBackgroundColor">@color/background_secondary</item>
        <item name="contentPadding">@dimen/spacing_lg</item>
        <item name="android:layout_margin">@dimen/spacing_sm</item>
    </style>
    
    <!-- Review Card -->
    <style name="Card.Review" parent="Card.Base">
        <item name="cardCornerRadius">@dimen/radius_sm</item>
        <item name="cardElevation">@dimen/elevation_xs</item>
        <item name="contentPadding">@dimen/spacing_md</item>
        <item name="android:layout_marginVertical">@dimen/spacing_sm</item>
    </style>
    
    <!-- Notification Card -->
    <style name="Card.Notification" parent="Card.Base">
        <item name="cardCornerRadius">@dimen/radius_sm</item>
        <item name="cardElevation">@dimen/elevation_xs</item>
        <item name="contentPadding">@dimen/spacing_md</item>
        <item name="android:layout_marginVertical">@dimen/spacing_xs</item>
        <item name="cardBackgroundColor">@color/background_secondary</item>
    </style>
    
    <!-- Profile Card -->
    <style name="Card.Profile" parent="Card.Base">
        <item name="cardCornerRadius">@dimen/radius_lg</item>
        <item name="cardElevation">@dimen/elevation_sm</item>
        <item name="contentPadding">@dimen/spacing_lg</item>
        <item name="android:layout_margin">@dimen/spacing_md</item>
    </style>
    
    <!-- Featured Card -->
    <style name="Card.Featured" parent="Card.Base">
        <item name="cardCornerRadius">@dimen/radius_xl</item>
        <item name="cardElevation">@dimen/elevation_lg</item>
        <item name="contentPadding">0dp</item>
        <item name="android:layout_margin">@dimen/spacing_md</item>
    </style>
    
    <!-- Quick Action Card -->
    <style name="Card.QuickAction" parent="Card.Base">
        <item name="cardCornerRadius">@dimen/radius_md</item>
        <item name="cardElevation">@dimen/elevation_sm</item>
        <item name="contentPadding">@dimen/spacing_md</item>
        <item name="android:layout_margin">@dimen/spacing_sm</item>
        <item name="cardBackgroundColor">@color/background_secondary</item>
    </style>
</resources>
