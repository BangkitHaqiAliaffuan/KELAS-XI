<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_checkout_food_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_image_placeholder"
        android:contentDescription="Food Image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_checkout_food_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nasi Goreng Spesial"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_checkout_food_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Rp 25,000"
            android:textSize="13sp"
            android:textColor="@color/primary_color" />

        <TextView
            android:id="@+id/tv_checkout_extras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Extra: Kerupuk, Acar"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_checkout_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="x2"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:minWidth="30dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_checkout_subtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Rp 50,000"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:minWidth="80dp"
        android:gravity="end" />

</LinearLayout>
