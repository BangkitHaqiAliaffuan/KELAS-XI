<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <!-- App Bar Layout -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_primary"
        app:elevation="0dp">

        <!-- Main Toolbar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_md"
            app:layout_scrollFlags="scroll|enterAlways">

            <!-- Location Section -->
            <LinearLayout
                android:id="@+id/ll_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@id/cv_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_location"
                    app:tint="@color/brand_primary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Text.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deliver to"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tv_current_location"
                        style="@style/Text.Body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/spacing_xs"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        app:drawableEndCompat="@drawable/ic_keyboard_arrow_down"
                        app:drawableTint="@color/text_primary"
                        tools:text="Jakarta Selatan, Indonesia" />

                </LinearLayout>

            </LinearLayout>

            <!-- Profile Avatar -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="@dimen/elevation_sm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_profile_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background_secondary"
                    android:padding="@dimen/spacing_xs"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person"
                    app:tint="@color/brand_primary" />

            </androidx.cardview.widget.CardView>

            <!-- Greeting and Search -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lg"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/ll_location">

                <!-- Greeting Text -->
                <TextView
                    android:id="@+id/tv_greeting"
                    style="@style/Text.Heading.H2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_xs"
                    tools:text="Good morning!" />

                <TextView
                    style="@style/Text.Body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_md"
                    android:text="What would you like to order today?"
                    android:textColor="@color/text_secondary" />

                <!-- Search Bar -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/InputLayout.Search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search restaurants or food">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_search"
                        style="@style/EditText.Base"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Categories Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_md"
                android:layout_marginVertical="@dimen/spacing_sm"
                android:orientation="vertical">

                <TextView
                    style="@style/Text.Heading.H5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Categories" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/spacing_xs"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_category_enhanced" />

            </LinearLayout>

            <!-- Popular Food Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_md"
                android:layout_marginVertical="@dimen/spacing_sm"
                android:orientation="vertical">

                <TextView
                    style="@style/Text.Heading.H5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Popular Today" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_popular_food"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_food_enhanced" />

            </LinearLayout>

            <!-- Nearby Restaurants Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_md"
                android:layout_marginVertical="@dimen/spacing_sm"
                android:orientation="vertical">

                <TextView
                    style="@style/Text.Heading.H5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Restaurants Near You" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_nearby_restaurants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_restaurant_enhanced" />

            </LinearLayout>

            <!-- Bottom Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_xxl" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
