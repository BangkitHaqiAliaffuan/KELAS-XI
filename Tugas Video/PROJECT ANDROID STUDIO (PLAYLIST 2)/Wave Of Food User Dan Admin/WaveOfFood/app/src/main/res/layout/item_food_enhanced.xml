<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Card.FoodItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Food Image Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ImageView
                android:id="@+id/iv_food_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:background="@color/background_secondary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/placeholder_food" />

            <!-- Discount Badge -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_discount_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_sm"
                android:visibility="gone"
                app:cardBackgroundColor="@color/accent_error"
                app:cardCornerRadius="@dimen/radius_md"
                app:cardElevation="@dimen/elevation_sm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/tv_discount"
                    style="@style/Text.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/spacing_sm"
                    android:paddingVertical="@dimen/spacing_xs"
                    android:textColor="@color/text_inverse"
                    android:textStyle="bold"
                    tools:text="20% OFF" />

            </androidx.cardview.widget.CardView>

            <!-- Favorite Button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_favorite"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="@dimen/spacing_sm"
                android:src="@drawable/ic_favorite_border"
                app:backgroundTint="@color/background_primary"
                app:borderWidth="0dp"
                app:fabCustomSize="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:maxImageSize="16dp"
                app:tint="@color/accent_error" />

            <!-- Rating Badge -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_rating_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_sm"
                app:cardBackgroundColor="@color/background_overlay"
                app:cardCornerRadius="@dimen/radius_md"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/spacing_sm"
                    android:paddingVertical="@dimen/spacing_xs">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_star"
                        app:tint="@color/accent_warning" />

                    <TextView
                        android:id="@+id/tv_rating"
                        style="@style/Text.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_xs"
                        android:textColor="@color/text_inverse"
                        android:textStyle="bold"
                        tools:text="4.5" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Food Information Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_md">

            <!-- Name and Restaurant -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_xs"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_food_name"
                    style="@style/Text.Food.Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Delicious Burger Premium" />

                <TextView
                    android:id="@+id/tv_restaurant_name"
                    style="@style/Text.Body.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:drawablePadding="@dimen/spacing_xs"
                    android:gravity="center_vertical"
                    app:drawableStartCompat="@drawable/ic_restaurant"
                    app:drawableTint="@color/text_tertiary"
                    tools:text="Food Paradise Restaurant" />

            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/tv_food_description"
                style="@style/Text.Food.Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                tools:text="Fresh beef patty with crispy vegetables and special sauce. Served with golden fries." />

            <!-- Price and Action Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Price Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Original Price (if discounted) -->
                    <TextView
                        android:id="@+id/tv_original_price"
                        style="@style/Text.Body.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_tertiary"
                        android:visibility="gone"
                        tools:text="Rp 50.000"
                        tools:visibility="visible" />

                    <!-- Current Price -->
                    <TextView
                        android:id="@+id/tv_food_price"
                        style="@style/Text.Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Rp 40.000" />

                    <!-- Delivery Info -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_delivery"
                            app:tint="@color/accent_success" />

                        <TextView
                            android:id="@+id/tv_delivery_time"
                            style="@style/Text.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_xs"
                            android:textAllCaps="false"
                            android:textColor="@color/accent_success"
                            tools:text="20-30 min" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Add to Cart Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add_to_cart"
                    style="@style/Button.AddToCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    app:icon="@drawable/ic_add"
                    app:iconGravity="textStart"
                    app:iconSize="16dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
