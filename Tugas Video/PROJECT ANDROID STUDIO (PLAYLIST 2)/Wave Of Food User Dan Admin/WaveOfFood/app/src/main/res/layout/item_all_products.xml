<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/FoodCardStyle"
    android:layout_margin="@dimen/space_sm"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="@color/gray_100"
    app:strokeWidth="1dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Product Image -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardProductImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardCornerRadius="@dimen/radius_lg"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="16:10">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_product_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_food_placeholder"
                    android:contentDescription="Product Image"
                    tools:src="@tools:sample/backgrounds/scenic" />

                <!-- Gradient Overlay for text readability -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gradient_detail_overlay" />

                <!-- Favorite Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFavorite"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="@dimen/space_sm"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:padding="0dp"
                    app:icon="@drawable/ic_favorite_border"
                    app:iconSize="16dp"
                    app:iconTint="@color/white"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:backgroundTint="@color/gray_800"
                    app:cornerRadius="16dp"
                    android:alpha="0.8"
                    android:contentDescription="Add to favorites" />

                <!-- Rating Badge -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_margin="@dimen/space_sm"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_rating_badge"
                    android:paddingHorizontal="@dimen/space_sm"
                    android:paddingVertical="@dimen/space_xs">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_star"
                        app:tint="@color/warning"
                        android:contentDescription="Rating" />

                    <TextView
                        android:id="@+id/tvRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.8"
                        style="@style/TextMicro"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/space_xs"
                        tools:text="4.8" />

                </LinearLayout>

            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Product Info Section -->
        <LinearLayout
            android:id="@+id/layoutProductInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_lg"
            app:layout_constraintTop_toBottomOf="@id/cardProductImage">

            <!-- Product Name and Category -->
            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delicious Product Name"
                style="@style/TextBodyBold"
                android:textColor="@color/gray_900"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Margherita Pizza Supreme" />

            <com.google.android.material.chip.Chip
                android:id="@+id/tv_product_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:layout_marginTop="@dimen/space_xs"
                app:chipBackgroundColor="@color/orange_light"
                app:chipStrokeWidth="0dp"
                android:textColor="@color/accent_orange_dark"
                style="@style/Widget.Material3.Chip.Assist"
                app:chipMinHeight="24dp"
                android:textSize="@dimen/text_xs"
                tools:text="Pizza" />

            <!-- Description -->
            <TextView
                android:id="@+id/tv_product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delicious product description that makes you want to try it..."
                style="@style/TextCaption"
                android:textColor="@color/gray_600"
                android:layout_marginTop="@dimen/space_sm"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Fresh mozzarella, tomato sauce, basil leaves on thin crust" />

            <!-- Price and Action Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/space_lg">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mulai dari"
                        style="@style/TextMicro"
                        android:textColor="@color/gray_500" />

                    <TextView
                        android:id="@+id/tv_product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 25.000"
                        style="@style/TextBodyBold"
                        android:textColor="@color/accent_orange"
                        tools:text="Rp 25.000" />

                </LinearLayout>

                <!-- Add to Cart Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddToCart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:padding="0dp"
                    app:icon="@drawable/ic_add"
                    app:iconSize="20dp"
                    app:iconTint="@color/white"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:backgroundTint="@color/primary_green"
                    app:cornerRadius="20dp"
                    android:contentDescription="Add to cart" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
