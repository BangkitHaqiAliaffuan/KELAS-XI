<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_50">

    <!-- Enhanced header with better spacing and modern design -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/CardStyle"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:padding="0dp"
                app:icon="@drawable/ic_arrow_back"
                app:iconSize="24dp"
                app:iconTint="@color/gray_700"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:backgroundTint="@color/gray_100"
                app:strokeWidth="0dp"
                app:cornerRadius="22dp"
                android:contentDescription="Kembali"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Riwayat Pesanan"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnBack"
                app:layout_constraintEnd_toStartOf="@id/btnFilter" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFilter"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:padding="0dp"
                app:icon="@drawable/ic_filter"
                app:iconSize="24dp"
                app:iconTint="@color/gray_700"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:backgroundTint="@color/gray_100"
                app:strokeWidth="0dp"
                app:cornerRadius="22dp"
                android:contentDescription="Filter pesanan"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Improved content area with better spacing -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Enhanced loading state with better visual hierarchy -->
        <LinearLayout
            android:id="@+id/layoutLoading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="visible">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorColor="@color/primary_green"
                app:trackColor="@color/gray_200"
                app:indicatorSize="48dp"
                app:trackThickness="4dp"
                android:indeterminate="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Memuat riwayat pesanan..."
                android:textSize="16sp"
                android:textColor="@color/gray_600"
                android:layout_marginTop="24dp" />

        </LinearLayout>

        <!-- Improved RecyclerView with better spacing and dividers -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvOrders"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            android:visibility="gone"
            tools:visibility="visible"
            tools:listitem="@layout/item_order" />

        <!-- Enhanced empty state with better visual design -->
        <LinearLayout
            android:id="@+id/layoutEmptyOrders"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="40dp"
            android:visibility="gone">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:cardCornerRadius="70dp"
                app:cardBackgroundColor="@color/primary_green"
                app:cardElevation="8dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_receipt"
                    app:tint="@color/white"
                    android:contentDescription="Tidak ada pesanan" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum Ada Pesanan"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:layout_marginTop="32dp" />

            <TextView
                android:id="@+id/tvEmptyMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mulai pesan makanan favorit Anda\ndan riwayat pesanan akan muncul di sini"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="@color/gray_600"
                android:layout_marginTop="12dp"
                android:lineSpacingExtra="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartOrdering"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Mulai Pesan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                app:backgroundTint="@color/primary_green"
                app:cornerRadius="28dp"
                android:paddingHorizontal="32dp"
                app:icon="@drawable/ic_add"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="20dp" />

        </LinearLayout>

        <!-- Enhanced error state with better visual feedback -->
        <LinearLayout
            android:id="@+id/layoutError"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="40dp"
            android:visibility="gone">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:cardCornerRadius="70dp"
                app:cardBackgroundColor="@color/error_light"
                app:cardElevation="8dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_error"
                    app:tint="@color/error"
                    android:contentDescription="Terjadi kesalahan" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terjadi Kesalahan"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:layout_marginTop="32dp" />

            <TextView
                android:id="@+id/tvErrorMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gagal memuat riwayat pesanan.\nSilakan coba lagi."
                android:textAlignment="center"
                android:textSize="16sp"
                android:textColor="@color/gray_600"
                android:layout_marginTop="12dp"
                android:lineSpacingExtra="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRetry"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Coba Lagi"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                app:backgroundTint="@color/primary_green"
                app:cornerRadius="28dp"
                android:paddingHorizontal="32dp"
                app:icon="@drawable/ic_refresh"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="20dp" />

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
