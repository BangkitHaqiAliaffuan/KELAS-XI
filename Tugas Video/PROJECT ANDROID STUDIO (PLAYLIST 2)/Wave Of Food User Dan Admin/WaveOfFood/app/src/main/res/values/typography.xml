<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Typography Styles for Wave Of Food -->
    
    <!-- Base Text Style -->
    <style name="Text">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Base Heading Style -->
    <style name="Text.Heading">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Base Food Style -->
    <style name="Text.Food">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Base Restaurant Style -->
    <style name="Text.Restaurant">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Base Status Style -->
    <style name="Text.Status">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    
    <!-- Heading Styles -->
    <style name="Text.Heading.H1">
        <item name="android:textSize">@dimen/text_size_h1</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>
    
    <style name="Text.Heading.H2">
        <item name="android:textSize">@dimen/text_size_h2</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>
    
    <style name="Text.Heading.H3">
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>
    
    <style name="Text.Heading.H4">
        <item name="android:textSize">@dimen/text_size_h4</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>
    
    <style name="Text.Heading.H5">
        <item name="android:textSize">@dimen/text_size_h5</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="Text.Heading.H6">
        <item name="android:textSize">@dimen/text_size_h6</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Body Text Styles -->
    <style name="Text.Body.Large">
        <item name="android:textSize">@dimen/text_size_body_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>
    
    <style name="Text.Body">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>
    
    <style name="Text.Body.Medium" parent="Text.Body">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="Text.Body.Small">
        <item name="android:textSize">@dimen/text_size_body_small</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="Text.Caption">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>
    
    <!-- Specialized Text Styles -->
    <style name="Text.Price">
        <item name="android:textSize">@dimen/text_size_h5</item>
        <item name="android:textColor">@color/brand_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="Text.Price.Large">
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:textColor">@color/brand_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="Text.Rating">
        <item name="android:textSize">@dimen/text_size_body_small</item>
        <item name="android:textColor">@color/accent_warning</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="Text.Status.Success">
        <item name="android:textSize">@dimen/text_size_body_small</item>
        <item name="android:textColor">@color/accent_success</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <style name="Text.Status.Warning">
        <item name="android:textSize">@dimen/text_size_body_small</item>
        <item name="android:textColor">@color/accent_warning</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <style name="Text.Status.Error">
        <item name="android:textSize">@dimen/text_size_body_small</item>
        <item name="android:textColor">@color/accent_error</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <style name="Text.Button">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="Text.Restaurant.Name">
        <item name="android:textSize">@dimen/text_size_h5</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="Text.Food.Name">
        <item name="android:textSize">@dimen/text_size_body_large</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="Text.Food.Description">
        <item name="android:textSize">@dimen/text_size_body_small</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
