<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Card.CartItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_md">

        <!-- Food Image -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_food_image"
            android:layout_width="@dimen/food_item_image_size"
            android:layout_height="@dimen/food_item_image_size"
            app:cardCornerRadius="@dimen/radius_sm"
            app:cardElevation="@dimen/elevation_xs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_cart_food_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_secondary"
                android:scaleType="centerCrop"
                tools:src="@drawable/placeholder_food" />

        </androidx.cardview.widget.CardView>

        <!-- Food Information -->
        <LinearLayout
            android:id="@+id/ll_food_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_md"
            android:layout_marginEnd="@dimen/spacing_sm"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@id/cv_quantity_controls"
            app:layout_constraintStart_toEndOf="@id/cv_food_image"
            app:layout_constraintTop_toTopOf="@id/cv_food_image">

            <!-- Food Name -->
            <TextView
                android:id="@+id/tv_cart_food_name"
                style="@style/Text.Food.Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_xs"
                tools:text="Delicious Burger Premium" />

            <!-- Restaurant Name -->
            <TextView
                android:id="@+id/tv_cart_restaurant_name"
                style="@style/Text.Body.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_xs"
                android:drawablePadding="@dimen/spacing_xs"
                android:gravity="center_vertical"
                app:drawableStartCompat="@drawable/ic_restaurant"
                app:drawableTint="@color/text_tertiary"
                tools:text="Food Paradise" />

            <!-- Extras/Addons -->
            <TextView
                android:id="@+id/tv_cart_extras"
                style="@style/Text.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:textAllCaps="false"
                android:textColor="@color/text_secondary"
                android:visibility="gone"
                tools:text="Extra Cheese, Large Size"
                tools:visibility="visible" />

            <!-- Price Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Unit Price -->
                <TextView
                    android:id="@+id/tv_cart_unit_price"
                    style="@style/Text.Body.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    tools:text="@Rp 40.000" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Total Price -->
                <TextView
                    android:id="@+id/tv_cart_total_price"
                    style="@style/Text.Price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Rp 80.000" />

            </LinearLayout>

        </LinearLayout>

        <!-- Quantity Controls -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_quantity_controls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/background_secondary"
            app:cardCornerRadius="@dimen/radius_lg"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cv_food_image">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_xs">

                <!-- Decrease Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_decrease_quantity"
                    style="@style/Button.Quantity"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="âˆ’"
                    android:textSize="18sp"
                    app:cornerRadius="@dimen/radius_round" />

                <!-- Quantity Display -->
                <TextView
                    android:id="@+id/tv_cart_quantity"
                    style="@style/Text.Body"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    tools:text="2" />

                <!-- Increase Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_increase_quantity"
                    style="@style/Button.Quantity"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="+"
                    android:textSize="16sp"
                    app:cornerRadius="@dimen/radius_round" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Remove Button -->
        <ImageButton
            android:id="@+id/btn_remove_item"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="@dimen/spacing_sm"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_quantity_controls"
            app:tint="@color/accent_error" />

        <!-- Notes Section (if any) -->
        <TextView
            android:id="@+id/tv_cart_notes"
            style="@style/Text.Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:layout_marginEnd="@dimen/spacing_lg"
            android:background="@drawable/notes_background"
            android:padding="@dimen/spacing_sm"
            android:textAllCaps="false"
            android:textColor="@color/text_secondary"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/btn_remove_item"
            app:layout_constraintStart_toStartOf="@id/cv_food_image"
            app:layout_constraintTop_toBottomOf="@id/cv_food_image"
            tools:text="Note: Extra spicy, no onions"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
