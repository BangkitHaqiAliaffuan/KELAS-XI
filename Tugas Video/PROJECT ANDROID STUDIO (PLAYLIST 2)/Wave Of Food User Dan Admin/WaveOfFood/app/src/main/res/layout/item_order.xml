<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="0dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/gray_100"
    app:strokeWidth="1dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Redesigned order header with better visual hierarchy -->
        <LinearLayout
            android:id="@+id/layoutOrderHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Enhanced order icon with better styling -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                app:cardBackgroundColor="@color/primary_green"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_receipt"
                    app:tint="@color/white"
                    android:contentDescription="Ikon pesanan" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Improved order info layout with better spacing -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/tvOrderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#ORD12345"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_900"
                    tools:text="#ORD12345" />

                <TextView
                    android:id="@+id/tvOrderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 Jan 2025, 14:30"
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"
                    android:layout_marginTop="4dp"
                    tools:text="25 Jan 2025, 14:30" />

            </LinearLayout>

            <!-- Enhanced status chip with better design -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diproses"
                style="@style/Widget.Material3.Chip.Assist"
                app:chipBackgroundColor="@color/success"
                app:chipStrokeWidth="0dp"
                android:textColor="@color/white"
                app:chipMinHeight="32dp"
                android:textSize="12sp"
                android:textStyle="bold"
                app:chipCornerRadius="16dp"
                tools:text="Diproses" />

        </LinearLayout>

        <!-- Fixed progress indicator without unsupported attributes -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressOrder"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_marginTop="20dp"
            app:indicatorColor="@color/primary_green"
            app:trackColor="@color/gray_200"
            android:progress="60"
            app:layout_constraintTop_toBottomOf="@id/layoutOrderHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:progress="60" />

        <!-- Redesigned order items section with better layout -->
        <LinearLayout
            android:id="@+id/layoutOrderItems"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/progressOrder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Enhanced food image with better styling -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/iv_first_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_food_placeholder"
                    android:contentDescription="Gambar makanan pertama"
                    tools:src="@tools:sample/backgrounds/scenic" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Improved order details with better typography -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/tv_first_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nasi Gudeg Special"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_900"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Nasi Gudeg Special" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tv_item_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 items"
                        android:textSize="14sp"
                        android:textColor="@color/gray_600"
                        tools:text="3 items" />

                    <TextView
                        android:id="@+id/tv_more_items"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" • +2 lainnya"
                        android:textSize="14sp"
                        android:textColor="@color/primary_green"
                        android:textStyle="bold"
                        android:visibility="gone"
                        tools:visibility="visible"
                        tools:text=" • +2 lainnya" />

                </LinearLayout>

                <!-- Enhanced restaurant info with better icon alignment -->
                <TextView
                    android:id="@+id/tvRestaurantName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Warung Pak Slamet"
                    android:textSize="13sp"
                    android:textColor="@color/gray_500"
                    android:layout_marginTop="6dp"
                    android:drawableStart="@drawable/ic_store"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    app:drawableTint="@color/gray_500"
                    tools:text="Warung Pak Slamet" />

            </LinearLayout>

            <!-- Enhanced total amount section with better visual hierarchy -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textSize="12sp"
                    android:textColor="@color/gray_500" />

                <TextView
                    android:id="@+id/tvTotalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 75.000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent_orange"
                    android:layout_marginTop="2dp"
                    tools:text="Rp 75.000" />

            </LinearLayout>

        </LinearLayout>

        <!-- Enhanced action buttons with better spacing and design -->
        <LinearLayout
            android:id="@+id/layoutActions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/layoutOrderItems"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTrackOrder"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Lacak"
                android:textSize="14sp"
                android:layout_marginEnd="12dp"
                android:paddingHorizontal="20dp"
                app:backgroundTint="@color/gray_100"
                android:textColor="@color/gray_700"
                app:cornerRadius="20dp"
                app:strokeWidth="0dp"
                app:icon="@drawable/ic_location"
                app:iconSize="18dp"
                app:iconTint="@color/gray_700"
                app:iconGravity="textStart"
                app:iconPadding="6dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReorder"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Pesan Lagi"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingHorizontal="20dp"
                app:backgroundTint="@color/accent_orange"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_refresh"
                app:iconGravity="textStart"
                app:iconPadding="6dp"
                app:iconSize="18dp"
                app:iconTint="@color/white" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>