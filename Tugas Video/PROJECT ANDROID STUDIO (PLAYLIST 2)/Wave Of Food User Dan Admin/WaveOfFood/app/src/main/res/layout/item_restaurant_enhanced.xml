<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Card.Restaurant"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Restaurant Image Header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <ImageView
                android:id="@+id/iv_restaurant_cover"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:background="@color/background_secondary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/placeholder_restaurant" />

            <!-- Overlay Gradient -->
            <View
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@drawable/gradient_overlay_bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Delivery Status Badge -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_delivery_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_sm"
                app:cardBackgroundColor="@color/accent_success"
                app:cardCornerRadius="@dimen/radius_md"
                app:cardElevation="@dimen/elevation_sm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_delivery_status"
                    style="@style/Text.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/spacing_sm"
                    android:paddingVertical="@dimen/spacing_xs"
                    android:text="OPEN"
                    android:textColor="@color/text_inverse"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <!-- Favorite Button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_favorite_restaurant"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="@dimen/spacing_sm"
                android:src="@drawable/ic_favorite_border"
                app:backgroundTint="@color/background_primary"
                app:borderWidth="0dp"
                app:fabCustomSize="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:maxImageSize="16dp"
                app:tint="@color/accent_error" />

            <!-- Restaurant Logo -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_restaurant_logo"
                android:layout_width="@dimen/restaurant_logo_size"
                android:layout_height="@dimen/restaurant_logo_size"
                android:layout_margin="@dimen/spacing_md"
                app:cardCornerRadius="@dimen/radius_sm"
                app:cardElevation="@dimen/elevation_md"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/iv_restaurant_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background_primary"
                    android:padding="@dimen/spacing_xs"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/placeholder_logo" />

            </androidx.cardview.widget.CardView>

            <!-- Quick Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_md"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:gravity="end"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cv_restaurant_logo">

                <!-- Rating -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_xs"
                    app:cardBackgroundColor="@color/background_overlay"
                    app:cardCornerRadius="@dimen/radius_sm"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/spacing_sm"
                        android:paddingVertical="@dimen/spacing_xs">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_star"
                            app:tint="@color/accent_warning" />

                        <TextView
                            android:id="@+id/tv_restaurant_rating"
                            style="@style/Text.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_xs"
                            android:textColor="@color/text_inverse"
                            android:textStyle="bold"
                            tools:text="4.7" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Delivery Time -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/background_overlay"
                    app:cardCornerRadius="@dimen/radius_sm"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/spacing_sm"
                        android:paddingVertical="@dimen/spacing_xs">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_delivery"
                            app:tint="@color/text_inverse" />

                        <TextView
                            android:id="@+id/tv_delivery_time"
                            style="@style/Text.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_xs"
                            android:textAllCaps="false"
                            android:textColor="@color/text_inverse"
                            android:textStyle="bold"
                            tools:text="25-35 min" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Restaurant Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_md">

            <!-- Restaurant Name and Cuisine -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_restaurant_name"
                    style="@style/Text.Restaurant.Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Burger Paradise Restaurant" />

                <TextView
                    android:id="@+id/tv_restaurant_cuisine"
                    style="@style/Text.Body.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    tools:text="American • Burgers • Fast Food" />

            </LinearLayout>

            <!-- Tags and Info Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Delivery Fee -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tag_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/spacing_sm"
                    android:paddingVertical="@dimen/spacing_xs">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_delivery"
                        app:tint="@color/accent_success" />

                    <TextView
                        android:id="@+id/tv_delivery_fee"
                        style="@style/Text.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_xs"
                        android:textAllCaps="false"
                        android:textColor="@color/accent_success"
                        tools:text="Free Delivery" />

                </LinearLayout>

                <!-- Distance -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:background="@drawable/tag_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/spacing_sm"
                    android:paddingVertical="@dimen/spacing_xs">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_location"
                        app:tint="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tv_distance"
                        style="@style/Text.Caption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_xs"
                        android:textAllCaps="false"
                        android:textColor="@color/text_secondary"
                        tools:text="2.3 km" />

                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- More Info Button -->
                <ImageButton
                    android:id="@+id/btn_more_info"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_arrow_forward"
                    app:tint="@color/brand_primary" />

            </LinearLayout>

            <!-- Popular Items Preview -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/Text.Body.Small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Popular:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_popular_items"
                    style="@style/Text.Body.Small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Classic Burger, Cheese Fries, Chocolate Shake" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
