<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button Styles for Wave Of Food -->
    
    <!-- Base Button Style -->
    <style name="Button.Base" parent="Widget.MaterialComponents.Button">
        <item name="android:textStyle">@style/Text.Button</item>
        <item name="android:minHeight">@dimen/button_height_medium</item>
        <item name="android:paddingHorizontal">@dimen/spacing_lg</item>
        <item name="android:paddingVertical">@dimen/spacing_sm</item>
        <item name="cornerRadius">@dimen/radius_sm</item>
        <item name="elevation">@dimen/elevation_sm</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Primary Button -->
    <style name="Button.Primary" parent="Button.Base">
        <item name="backgroundTint">@color/brand_primary</item>
        <item name="android:textColor">@color/text_inverse</item>
        <item name="rippleColor">@color/brand_primary_light</item>
        <item name="strokeWidth">0dp</item>
    </style>
    
    <style name="Button.Primary.Large" parent="Button.Primary">
        <item name="android:minHeight">@dimen/button_height_large</item>
        <item name="android:textSize">@dimen/text_size_body_large</item>
        <item name="cornerRadius">@dimen/radius_md</item>
    </style>
    
    <style name="Button.Primary.Small" parent="Button.Primary">
        <item name="android:minHeight">@dimen/button_height_small</item>
        <item name="android:textSize">@dimen/text_size_body_small</item>
        <item name="android:paddingHorizontal">@dimen/spacing_md</item>
    </style>
    
    <!-- Secondary Button -->
    <style name="Button.Secondary" parent="Button.Base">
        <item name="backgroundTint">@color/background_primary</item>
        <item name="android:textColor">@color/brand_primary</item>
        <item name="strokeColor">@color/brand_primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="rippleColor">@color/interactive_focused</item>
    </style>
    
    <style name="Button.Secondary.Large" parent="Button.Secondary">
        <item name="android:minHeight">@dimen/button_height_large</item>
        <item name="android:textSize">@dimen/text_size_body_large</item>
        <item name="cornerRadius">@dimen/radius_md</item>
    </style>
    
    <style name="Button.Secondary.Small" parent="Button.Secondary">
        <item name="android:minHeight">@dimen/button_height_small</item>
        <item name="android:textSize">@dimen/text_size_body_small</item>
        <item name="android:paddingHorizontal">@dimen/spacing_md</item>
    </style>
    
    <!-- Ghost Button -->
    <style name="Button.Ghost" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textStyle">@style/Text.Button</item>
        <item name="android:textColor">@color/brand_primary</item>
        <item name="android:minHeight">@dimen/button_height_medium</item>
        <item name="android:paddingHorizontal">@dimen/spacing_md</item>
        <item name="rippleColor">@color/interactive_focused</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Icon Button -->
    <style name="Button.Icon" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">@dimen/radius_round</item>
        <item name="rippleColor">@color/interactive_focused</item>
        <item name="android:padding">@dimen/spacing_sm</item>
    </style>
    
    <!-- Floating Action Button -->
    <style name="Button.FAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/brand_primary</item>
        <item name="tint">@color/text_inverse</item>
        <item name="elevation">@dimen/elevation_md</item>
        <item name="hoveredFocusedTranslationZ">@dimen/elevation_lg</item>
        <item name="rippleColor">@color/brand_primary_light</item>
    </style>
    
    <!-- Success Button -->
    <style name="Button.Success" parent="Button.Base">
        <item name="backgroundTint">@color/accent_success</item>
        <item name="android:textColor">@color/text_inverse</item>
        <item name="rippleColor">@color/accent_success</item>
    </style>
    
    <!-- Warning Button -->
    <style name="Button.Warning" parent="Button.Base">
        <item name="backgroundTint">@color/accent_warning</item>
        <item name="android:textColor">@color/text_inverse</item>
        <item name="rippleColor">@color/accent_warning</item>
    </style>
    
    <!-- Error Button -->
    <style name="Button.Error" parent="Button.Base">
        <item name="backgroundTint">@color/accent_error</item>
        <item name="android:textColor">@color/text_inverse</item>
        <item name="rippleColor">@color/accent_error</item>
    </style>
    
    <!-- Add to Cart Button -->
    <style name="Button.AddToCart" parent="Button.Primary">
        <item name="android:minHeight">@dimen/button_height_small</item>
        <item name="android:textSize">@dimen/text_size_body_small</item>
        <item name="cornerRadius">@dimen/radius_lg</item>
        <item name="android:paddingHorizontal">@dimen/spacing_md</item>
    </style>
    
    <!-- Quantity Button -->
    <style name="Button.Quantity" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:textColor">@color/brand_primary</item>
        <item name="cornerRadius">@dimen/radius_xs</item>
        <item name="strokeColor">@color/neutral_300</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@color/background_primary</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Category Chip Button -->
    <style name="Button.CategoryChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/background_secondary</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipCornerRadius">@dimen/radius_lg</item>
        <item name="android:textSize">@dimen/text_size_body_small</item>
        <item name="chipMinHeight">32dp</item>
        <item name="chipStartPadding">@dimen/spacing_md</item>
        <item name="chipEndPadding">@dimen/spacing_md</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
    </style>
    
    <style name="Button.CategoryChip.Selected" parent="Button.CategoryChip">
        <item name="chipBackgroundColor">@color/brand_primary</item>
        <item name="android:textColor">@color/text_inverse</item>
    </style>
</resources>
