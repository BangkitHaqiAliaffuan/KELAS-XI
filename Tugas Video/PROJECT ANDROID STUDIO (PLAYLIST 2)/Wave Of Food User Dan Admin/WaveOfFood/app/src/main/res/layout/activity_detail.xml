<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_50"
    tools:context=".DetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/food_image_hero"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/primary_green"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:expandedTitleMarginStart="@dimen/space_lg"
            app:expandedTitleMarginEnd="@dimen/space_lg">

            <!-- Hero Image -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:id="@+id/ivFoodImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_food_placeholder"
                    android:contentDescription="Food Image"
                    tools:src="@tools:sample/backgrounds/scenic" />

                <!-- Gradient Overlay -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gradient_detail_overlay" />

            </FrameLayout>

            <!-- Toolbar -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:navigationIconTint="@color/white" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/space_lg"
            android:paddingTop="@dimen/space_lg"
            android:paddingBottom="100dp">

            <!-- Food Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFoodInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CardStyle"
                android:layout_marginBottom="@dimen/space_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/space_xl">

                    <!-- Food Name & Favorite -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvFoodName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Delicious Food Name"
                            style="@style/TextHeading2"
                            android:textColor="@color/gray_900"
                            tools:text="Margherita Pizza Supreme" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnFavorite"
                            android:layout_width="@dimen/image_small"
                            android:layout_height="@dimen/image_small"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:insetLeft="0dp"
                            android:insetRight="0dp"
                            android:padding="0dp"
                            app:icon="@drawable/ic_favorite_border"
                            app:iconSize="24dp"
                            app:iconTint="@color/error"
                            app:iconGravity="textStart"
                            app:iconPadding="0dp"
                            app:backgroundTint="@color/gray_100"
                            app:cornerRadius="24dp"
                            android:contentDescription="Add to favorites" />

                    </LinearLayout>

                    <!-- Rating & Reviews -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/space_md">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_star"
                            android:contentDescription="Rating"
                            app:tint="@color/warning" />

                        <TextView
                            android:id="@+id/tvRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.8"
                            style="@style/TextBodyBold"
                            android:textColor="@color/gray_800"
                            android:layout_marginStart="@dimen/space_xs"
                            tools:text="4.8" />

                        <View
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:layout_marginHorizontal="@dimen/space_sm"
                            android:background="@drawable/dot_separator" />

                        <TextView
                            android:id="@+id/tvReviewCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(120 reviews)"
                            style="@style/TextCaption"
                            android:textColor="@color/gray_600"
                            tools:text="(120 reviews)" />

                    </LinearLayout>

                    <!-- Price -->
                    <TextView
                        android:id="@+id/tvFoodPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 25.000"
                        style="@style/TextHeading3"
                        android:textColor="@color/accent_orange"
                        android:layout_marginTop="@dimen/space_lg"
                        tools:text="Rp 25.000" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Description Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CardStyle"
                android:layout_marginBottom="@dimen/space_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/space_xl">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deskripsi"
                        style="@style/TextSubheading"
                        android:textColor="@color/gray_900"
                        android:layout_marginBottom="@dimen/space_md" />

                    <TextView
                        android:id="@+id/tvFoodDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Deskripsi makanan yang menggugah selera dengan bahan-bahan berkualitas tinggi dan cita rasa yang autentik."
                        style="@style/TextBody"
                        android:textColor="@color/gray_700"
                        android:lineSpacingExtra="4dp"
                        tools:text="Fresh mozzarella, tomato sauce, basil leaves, and a drizzle of olive oil on our signature thin crust. A classic Italian favorite that never goes out of style." />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Ingredients Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CardStyle"
                android:layout_marginBottom="@dimen/space_lg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/space_xl">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bahan-bahan"
                        style="@style/TextSubheading"
                        android:textColor="@color/gray_900"
                        android:layout_marginBottom="@dimen/space_md" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupIngredients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacingHorizontal="@dimen/space_sm">

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fresh Tomato"
                            app:chipBackgroundColor="@color/green_container"
                            app:chipStrokeWidth="0dp"
                            android:textColor="@color/primary_green" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mozzarella"
                            app:chipBackgroundColor="@color/green_container"
                            app:chipStrokeWidth="0dp"
                            android:textColor="@color/primary_green" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Basil"
                            app:chipBackgroundColor="@color/green_container"
                            app:chipStrokeWidth="0dp"
                            android:textColor="@color/primary_green" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Add to Cart Section -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardCornerRadius="@dimen/radius_xxl"
        app:cardElevation="@dimen/elevation_lg"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/space_xl">

            <!-- Quantity Controls -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_quantity_control"
                android:layout_marginEnd="@dimen/space_lg">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDecreaseQuantity"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:padding="0dp"
                    app:icon="@drawable/ic_remove"
                    app:iconSize="18dp"
                    app:iconTint="@color/primary_green"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="20dp"
                    android:contentDescription="Decrease quantity" />

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    style="@style/TextBodyBold"
                    android:textColor="@color/gray_900"
                    android:gravity="center"
                    tools:text="2" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnIncreaseQuantity"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    android:padding="0dp"
                    app:icon="@drawable/ic_add"
                    app:iconSize="18dp"
                    app:iconTint="@color/white"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:backgroundTint="@color/primary_green"
                    app:cornerRadius="20dp"
                    android:contentDescription="Increase quantity" />

            </LinearLayout>

            <!-- Add to Cart Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddToCart"
                style="@style/ButtonPrimary"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_weight="1"
                android:text="Tambah ke Keranjang"
                app:icon="@drawable/ic_shopping_cart_add"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/space_sm" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>