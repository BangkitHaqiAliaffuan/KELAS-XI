<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/brand_primary" />
            <corners android:radius="@dimen/radius_xl" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/neutral_100" />
            <corners android:radius="@dimen/radius_xl" />
            <stroke
                android:width="1dp"
                android:color="@color/brand_primary" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/neutral_50" />
            <corners android:radius="@dimen/radius_xl" />
            <stroke
                android:width="1dp"
                android:color="@color/neutral_200" />
        </shape>
    </item>
</selector>
