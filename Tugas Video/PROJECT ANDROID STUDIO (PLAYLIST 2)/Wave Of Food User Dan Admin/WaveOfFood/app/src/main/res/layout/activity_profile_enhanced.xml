<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Profile Image -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@drawable/gradient_primary_card">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="@dimen/spacing_medium"
                android:background="@drawable/bg_circle_surface"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/text_primary"
                android:contentDescription="Back" />

            <!-- Profile Image -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvProfileImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="@dimen/spacing_large"
                app:cardCornerRadius="60dp"
                app:cardElevation="@dimen/elevation_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnBack">

                <ImageView
                    android:id="@+id/ivProfileImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person"
                    android:background="@color/surface_primary" />

            </androidx.cardview.widget.CardView>

            <!-- Edit Profile Button -->
            <ImageButton
                android:id="@+id/btnEditProfile"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_circle_primary"
                android:src="@drawable/ic_edit"
                app:layout_constraintBottom_toBottomOf="@id/cvProfileImage"
                app:layout_constraintEnd_toEndOf="@id/cvProfileImage"
                app:tint="@color/text_inverse"
                android:contentDescription="Edit Profile" />

            <!-- User Name -->
            <TextView
                android:id="@+id/tvUserName"
                style="@style/Text.Heading.H4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:text="John Doe"
                android:textColor="@color/text_inverse"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cvProfileImage" />

            <!-- User Email -->
            <TextView
                android:id="@+id/tvUserEmail"
                style="@style/Text.Body.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:text="john.doe@email.com"
                android:textColor="@color/text_inverse"
                android:alpha="0.8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvUserName" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium">

            <!-- Quick Stats -->
            <androidx.cardview.widget.CardView
                style="@style/Card.Default"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_medium">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Text.Heading.H5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24"
                            android:textColor="@color/primary_main" />

                        <TextView
                            style="@style/Text.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Orders"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/border_primary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Text.Heading.H5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8"
                            android:textColor="@color/primary_main" />

                        <TextView
                            style="@style/Text.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Favorites"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/border_primary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Text.Heading.H5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.8"
                            android:textColor="@color/primary_main" />

                        <TextView
                            style="@style/Text.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rating"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Menu Items -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Account Section -->
                <TextView
                    style="@style/Text.Heading.H6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:text="Account"
                    android:textColor="@color/text_primary" />

                <!-- Edit Profile -->
                <androidx.cardview.widget.CardView
                    style="@style/Card.Default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_medium">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_person"
                            app:tint="@color/text_secondary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/Text.Body.Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Edit Profile"
                                android:textColor="@color/text_primary" />

                            <TextView
                                style="@style/Text.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Update your profile information"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/text_secondary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Addresses -->
                <androidx.cardview.widget.CardView
                    style="@style/Card.Default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_medium">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_location"
                            app:tint="@color/text_secondary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/Text.Body.Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="My Addresses"
                                android:textColor="@color/text_primary" />

                            <TextView
                                style="@style/Text.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Manage delivery addresses"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/text_secondary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Payment Methods -->
                <androidx.cardview.widget.CardView
                    style="@style/Card.Default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_medium">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_payment"
                            app:tint="@color/text_secondary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/Text.Body.Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Payment Methods"
                                android:textColor="@color/text_primary" />

                            <TextView
                                style="@style/Text.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add or edit payment methods"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/text_secondary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Preferences Section -->
                <TextView
                    style="@style/Text.Heading.H6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:text="Preferences"
                    android:textColor="@color/text_primary" />

                <!-- Notifications -->
                <androidx.cardview.widget.CardView
                    style="@style/Card.Default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_medium">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_notifications"
                            app:tint="@color/text_secondary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/Text.Body.Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Notifications"
                                android:textColor="@color/text_primary" />

                            <TextView
                                style="@style/Text.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Manage notification preferences"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/text_secondary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Language -->
                <androidx.cardview.widget.CardView
                    style="@style/Card.Default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_medium">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_language"
                            app:tint="@color/text_secondary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/Text.Body.Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Language"
                                android:textColor="@color/text_primary" />

                            <TextView
                                style="@style/Text.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="English"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/text_secondary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Support Section -->
                <TextView
                    style="@style/Text.Heading.H6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:text="Support"
                    android:textColor="@color/text_primary" />

                <!-- Help Center -->
                <androidx.cardview.widget.CardView
                    style="@style/Card.Default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_medium">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_help"
                            app:tint="@color/text_secondary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/Text.Body.Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Help Center"
                                android:textColor="@color/text_primary" />

                            <TextView
                                style="@style/Text.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FAQ and support"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/text_secondary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Rate App -->
                <androidx.cardview.widget.CardView
                    style="@style/Card.Default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_medium">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_star"
                            app:tint="@color/text_secondary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/Text.Body.Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rate App"
                                android:textColor="@color/text_primary" />

                            <TextView
                                style="@style/Text.Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tell us what you think"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/text_secondary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Logout Button -->
                <Button
                    style="@style/Button.Secondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:text="Logout"
                    android:textColor="@color/error_main"
                    app:strokeColor="@color/error_main" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
