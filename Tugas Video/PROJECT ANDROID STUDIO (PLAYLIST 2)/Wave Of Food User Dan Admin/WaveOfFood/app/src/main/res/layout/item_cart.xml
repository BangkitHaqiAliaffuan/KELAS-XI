<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardCartItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CardStyle"
    android:layout_marginHorizontal="@dimen/space_lg"
    android:layout_marginVertical="@dimen/space_sm"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="@color/gray_100"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_lg">

        <!-- Food Image -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFoodImage"
            android:layout_width="@dimen/food_image_small"
            android:layout_height="@dimen/food_image_small"
            app:cardCornerRadius="@dimen/radius_lg"
            app:cardElevation="@dimen/elevation_sm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivCartFoodImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_food_placeholder"
                android:contentDescription="Food Image"
                tools:src="@tools:sample/backgrounds/scenic" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Food Info Section -->
        <LinearLayout
            android:id="@+id/layoutFoodInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/space_lg"
            android:layout_marginEnd="@dimen/space_md"
            app:layout_constraintStart_toEndOf="@id/cardFoodImage"
            app:layout_constraintTop_toTopOf="@id/cardFoodImage"
            app:layout_constraintEnd_toStartOf="@id/btnDeleteItem"
            app:layout_constraintBottom_toBottomOf="@id/cardFoodImage">

            <TextView
                android:id="@+id/tvFoodName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delicious Food Name"
                style="@style/TextBodyBold"
                android:textColor="@color/gray_900"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Margherita Pizza Supreme" />

            <TextView
                android:id="@+id/tvFoodDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delicious description"
                style="@style/TextCaption"
                android:textColor="@color/gray_600"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/space_xs"
                tools:text="Fresh mozzarella, tomato sauce" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/space_sm">

                <TextView
                    android:id="@+id/tvCartFoodPrice"
                    style="@style/TextBodyBold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rp 25.000"
                    android:textColor="@color/accent_orange"
                    tools:text="Rp 25.000" />

                <!-- Quantity Controls -->
                <LinearLayout
                    android:id="@+id/layoutQuantityControls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_quantity_control">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDecrease"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        android:padding="0dp"
                        app:icon="@drawable/ic_remove"
                        app:iconSize="16dp"
                        app:iconTint="@color/primary_green"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:backgroundTint="@android:color/transparent"
                        app:strokeColor="@color/primary_green"
                        app:strokeWidth="1dp"
                        app:cornerRadius="16dp"
                        android:contentDescription="Decrease quantity" />

                    <TextView
                        android:id="@+id/tvCartQuantity"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        style="@style/TextBodyBold"
                        android:textColor="@color/gray_900"
                        android:gravity="center"
                        tools:text="2" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnIncrease"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:insetLeft="0dp"
                        android:insetRight="0dp"
                        android:padding="0dp"
                        app:icon="@drawable/ic_add"
                        app:iconSize="16dp"
                        app:iconTint="@color/white"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:backgroundTint="@color/primary_green"
                        app:cornerRadius="16dp"
                        android:contentDescription="Increase quantity" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Remove Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteItem"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:padding="0dp"
            app:icon="@drawable/ic_delete"
            app:iconSize="18dp"
            app:iconTint="@color/error"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:backgroundTint="@color/gray_100"
            app:cornerRadius="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="Remove item from cart" />

        <!-- Subtotal Info -->
        <LinearLayout
            android:id="@+id/layoutSubtotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/space_md"
            android:padding="@dimen/space_sm"
            android:background="@drawable/bg_subtotal_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardFoodImage"
            android:visibility="visible">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Subtotal"
                style="@style/TextCaption"
                android:textColor="@color/gray_600" />

            <TextView
                android:id="@+id/tvSubtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 50.000"
                style="@style/TextBodyBold"
                android:textColor="@color/gray_900"
                tools:text="Rp 50.000" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>