<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Card.Default"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_small"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_medium">

        <!-- Order Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_small">

            <!-- Restaurant Logo -->
            <androidx.cardview.widget.CardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="@dimen/radius_medium"
                app:cardElevation="@dimen/elevation_small">

                <ImageView
                    android:id="@+id/ivRestaurantLogo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder_restaurant"
                    android:background="@color/surface_secondary" />

            </androidx.cardview.widget.CardView>

            <!-- Restaurant Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/spacing_small"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvRestaurantName"
                    style="@style/Text.Body.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restaurant Name"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvOrderDate"
                    style="@style/Text.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dec 15, 2023 â€¢ 2:30 PM"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Status Badge -->
            <TextView
                android:id="@+id/tvOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tag_background"
                android:paddingHorizontal="@dimen/spacing_small"
                android:paddingVertical="@dimen/spacing_tiny"
                android:text="Delivered"
                android:textColor="@color/success_main"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Order Items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/spacing_small">

            <!-- Item 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/spacing_tiny">

                <TextView
                    style="@style/Text.Body.Small"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:text="2x"
                    android:textColor="@color/text_secondary"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/tvItemName1"
                    style="@style/Text.Body.Small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nasi Goreng Spesial"
                    android:textColor="@color/text_primary"
                    android:layout_marginStart="@dimen/spacing_small" />

                <TextView
                    android:id="@+id/tvItemPrice1"
                    style="@style/Text.Body.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 45,000"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- More items indicator -->
            <TextView
                android:id="@+id/tvMoreItems"
                style="@style/Text.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="+ 2 more items"
                android:textColor="@color/text_secondary"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_primary"
            android:layout_marginVertical="@dimen/spacing_small" />

        <!-- Order Summary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Order Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvOrderId"
                    style="@style/Text.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order #12345"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tvTotalAmount"
                    style="@style/Text.Body.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total: Rp 67,500"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Rate Button (only for delivered orders) -->
                <Button
                    android:id="@+id/btnRate"
                    style="@style/Button.Ghost"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginEnd="@dimen/spacing_small"
                    android:minWidth="80dp"
                    android:text="Rate"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <!-- Reorder Button -->
                <Button
                    android:id="@+id/btnReorder"
                    style="@style/Button.Secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:minWidth="80dp"
                    android:text="Reorder"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Track Order Button (for in-progress orders) -->
        <Button
            android:id="@+id/btnTrackOrder"
            style="@style/Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="Track Order"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
