<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permission required when posting notifications on Android 13+ (lint: NotificationPermission)
        Glide's NotificationTarget may trigger lint; handle runtime request as needed in app. -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BlogApp"
        android:name=".BlogAppApplication">
        
        <!-- Login Activity - Entry point of the app -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Register Activity -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:parentActivityName=".LoginActivity" />

        <!-- Main Activity - Blog Feed -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Write Blog Activity -->
        <activity
            android:name=".WriteBlogActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- Blog Detail Activity -->
        <activity
            android:name=".BlogDetailActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- Profile Activity -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- Your Articles Activity -->
        <activity
            android:name=".YourArticlesActivity"
            android:exported="false"
            android:parentActivityName=".ProfileActivity" />

        <!-- Saved Articles Activity -->
        <activity
            android:name=".SavedArticlesActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

    </application>

</manifest>