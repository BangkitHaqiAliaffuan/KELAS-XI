<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_medium"
    android:layout_marginVertical="@dimen/margin_small"
    style="@style/Widget.BlogApp.CardView"
    app:cardElevation="@dimen/elevation_card"
    app:cardCornerRadius="@dimen/corner_radius_large"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutlineVariant"
    android:background="?attr/colorSurface"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_large">

        <!-- Author Header Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/authorHeaderLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Author Profile Picture with Modern Styling -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profileCard"
                android:layout_width="@dimen/profile_image_medium"
                android:layout_height="@dimen/profile_image_medium"
                app:cardCornerRadius="@dimen/profile_image_medium"
                app:cardElevation="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivAuthorProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_avatar_placeholder"
                    tools:src="@tools:sample/avatars" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Author Info Container -->
            <LinearLayout
                android:id="@+id/authorInfoLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_small"
                app:layout_constraintTop_toTopOf="@id/profileCard"
                app:layout_constraintBottom_toBottomOf="@id/profileCard"
                app:layout_constraintStart_toEndOf="@id/profileCard"
                app:layout_constraintEnd_toStartOf="@id/btnMore">

                <!-- Author Name -->
                <TextView
                    android:id="@+id/tvAuthorName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@tools:sample/full_names"
                    android:textAppearance="@style/TextAppearance.BlogApp.BodyLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1" />

                <!-- Post Time with Icon -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/margin_tiny">

                    <ImageView
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:src="@android:drawable/ic_menu_recent_history"
                        app:tint="?attr/colorOnSurfaceVariant"
                        android:layout_marginEnd="@dimen/margin_tiny" />

                    <TextView
                        android:id="@+id/tvPostTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@tools:sample/date/hhmmss"
                        android:textAppearance="@style/TextAppearance.BlogApp.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                </LinearLayout>

            </LinearLayout>

            <!-- More Options Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMore"
                android:layout_width="@dimen/button_height_medium"
                android:layout_height="@dimen/button_height_medium"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                style="@style/Widget.Material3.Button.IconButton"
                app:icon="@android:drawable/ic_menu_more"
                app:iconTint="?attr/colorOnSurfaceVariant"
                app:iconSize="@dimen/icon_size_medium"
                app:layout_constraintTop_toTopOf="@id/profileCard"
                app:layout_constraintBottom_toBottomOf="@id/profileCard"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Blog Title -->
        <TextView
            android:id="@+id/tvBlogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@tools:sample/lorem/random"
            android:textAppearance="@style/TextAppearance.BlogApp.HeadlineMedium"
            android:textColor="?attr/colorOnSurface"
            android:lineSpacingExtra="@dimen/line_spacing_medium"
            android:maxLines="3"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/authorHeaderLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Blog Content Preview -->
        <TextView
            android:id="@+id/tvBlogContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="@tools:sample/lorem/random"
            android:textAppearance="@style/TextAppearance.BlogApp.BodyLarge"
            android:textColor="?attr/colorOnSurface"
            android:lineSpacingExtra="@dimen/line_spacing_medium"
            android:maxLines="4"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/tvBlogTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginTop="@dimen/margin_large"
            android:background="?attr/colorOutlineVariant"
            app:layout_constraintTop_toBottomOf="@id/tvBlogContent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Action Buttons Section -->
        <LinearLayout
            android:id="@+id/llActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Like Button with Modern Design -->
            <LinearLayout
                android:id="@+id/likeSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_small"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLike"
                    android:layout_width="@dimen/button_height_medium"
                    android:layout_height="@dimen/button_height_medium"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    style="@style/Widget.Material3.Button.IconButton"
                    app:icon="@drawable/ic_heart_outline"
                    app:iconTint="?attr/colorOnSurfaceVariant"
                    app:iconSize="@dimen/icon_size_medium" />

                <TextView
                    android:id="@+id/tvLikeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAppearance="@style/TextAppearance.BlogApp.BodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginStart="@dimen/margin_tiny"
                    android:minWidth="24dp" />

            </LinearLayout>

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="@dimen/button_height_medium"
                android:layout_height="@dimen/button_height_medium"
                android:layout_marginStart="@dimen/margin_small"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                style="@style/Widget.Material3.Button.IconButton"
                app:icon="@drawable/ic_bookmark_outline"
                app:iconTint="?attr/colorOnSurfaceVariant"
                app:iconSize="@dimen/icon_size_medium" />

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Read More Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/tvReadMore"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height_medium"
                android:text="Read More"
                android:textAppearance="@style/TextAppearance.BlogApp.ButtonMedium"
                style="@style/Widget.Material3.Button.TextButton"
                app:iconGravity="end"
                app:icon="@android:drawable/ic_menu_view"
                app:iconTint="?attr/colorPrimary"
                app:shapeAppearance="@style/ShapeAppearance.BlogApp.SmallComponent" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
